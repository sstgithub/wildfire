= form_for(@wildfire) do |f|
  - if @wildfire.errors.any?
    #error_explanation
      %h2
        = pluralize(@wildfire.errors.count, "error")
        prohibited this wildfire from being saved:
      %ul
        - @wildfire.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :start_date
    %br/
    = f.date_select :start_date
  .field
    = f.label :end_date
    %br/
    = f.date_select :end_date
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .field
    = f.label :area_burned
    %br/
    = f.number_field :area_burned
  .field
    = f.label :fatalities
    %br/
    = f.number_field :fatalities
  .actions
    = f.submit
